%h2 Details about: #{@rule.name}

- if @rule.parent
    %h3= link_to "Parent", rule_path(@rule.parent) 
    = @rule.parent.name

    = render :partial => 'rules' , :object => @rule.parent


%h3 This rule: #{@rule.name}
= render :partial => 'rules', :object => @rule


- @children = @rule.children
- if @children
    %h3 Child rules
    - @children.each do |child|
        = render :partial => 'rules', :object => child
